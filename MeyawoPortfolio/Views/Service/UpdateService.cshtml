@model MeyawoPortfolio.Models.TblService
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Hizmet GÜncelleme Sayfası</h2>

<form method="post">
    <input type="hidden" name="ServiceID" readonly value="@Model.ServiceID" class="table table-bordered" />
    <label>Hizmet Başlığı</label>
    <input type="text" class="table table-bordered" value="@Model.Title" name="Title" />
    <br />
    <label>Hizmet Görseli</label>
    <input type="text" class="table table-bordered" value="@Model.ImageUrl" name="Imageurl" />
    <br />
    <label>Hizmet Açıklması</label>
    <textarea rows="4" class="table table-bordered" name="Description">@Model.Description</textarea>
    <br />
    <button type="submit" class="btn btn-info">Hizmeti Güncelle</button>
    <a href="/SocailMedial/Index/" class="btn btn-outline-danger">Geri dön</a>
</form>

