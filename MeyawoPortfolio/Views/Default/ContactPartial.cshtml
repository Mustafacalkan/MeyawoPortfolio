@model MeyawoPortfolio.Models.TblContact

<section class="section" id="contact">
    <div class="container text-center">
        <p class="section-subtitle">Nasıl İletişim Kurabilirsin?</p>
        <h6 class="section-title mb-5">Bana Yazın</h6>
    
        <form action="/Default/SendMessage/" method="post" class="contact-form col-md-10 col-lg-8 m-auto">
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <input type="text" size="50" name="NameSurname" class="form-control" placeholder="Ad Soyad" required>
                </div>
                <div class="form-group col-sm-6">
                    <input type="email" class="form-control" name="Email" placeholder="Email" requried>
                </div>
                <div class="form-group col-sm-12">
                    <textarea name="Message" rows="6" class="form-control"
                              placeholder="Mesaj"></textarea>
                </div>
                <div class="form-group col-sm-12 mt-3">
                    <button type="submit" class="btn btn-outline-primary rounded">Mesaj Gönder </button>
                </div>
            </div>
        </form>
    
    </div>
</section>


